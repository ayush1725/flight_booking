{
  "info": {
    "name": "Flight Booking API",
    "description": "Complete flight booking system with authentication, payments, and e-tickets",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "bookingId",
      "value": ""
    },
    {
      "key": "flightId",
      "value": ""
    },
    {
      "key": "paymentIntentId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "🔍 Health & Info",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "API Documentation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api",
              "host": ["{{baseUrl}}"],
              "path": ["api"]
            }
          }
        }
      ]
    },
    {
      "name": "🔐 Authentication",
      "item": [
        {
          "name": "Email Registration",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.user) {",
                  "        pm.collectionVariables.set('userId', response.data.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/email/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "email", "register"]
            }
          }
        },
        {
          "name": "Email Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/email/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "email", "verify"]
            }
          }
        },
        {
          "name": "Email Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "        pm.collectionVariables.set('userId', response.data.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/email/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "email", "login"]
            }
          }
        },
        {
          "name": "Phone Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+911234567890\",\n  \"fullName\": \"Jane Smith\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/phone/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "phone", "register"]
            }
          }
        },
        {
          "name": "Phone OTP Verification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+911234567890\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/phone/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "phone", "verify"]
            }
          }
        },
        {
          "name": "Test OTP Generation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+911234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/test/generate-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "test", "generate-otp"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "✈️ Flights",
      "item": [
        {
          "name": "Search Flights",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.length > 0) {",
                  "        pm.collectionVariables.set('flightId', response.data[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/flights?origin=Delhi&destination=Mumbai&date=2025-09-10&passengers=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights"],
              "query": [
                {
                  "key": "origin",
                  "value": "Delhi"
                },
                {
                  "key": "destination",
                  "value": "Mumbai"
                },
                {
                  "key": "date",
                  "value": "2025-09-10"
                },
                {
                  "key": "passengers",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Flight by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/flights/{{flightId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights", "{{flightId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "🎫 Bookings",
      "item": [
        {
          "name": "Create Booking",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.id) {",
                  "        pm.collectionVariables.set('bookingId', response.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flightId\": \"{{flightId}}\",\n  \"userId\": \"{{userId}}\",\n  \"passengers\": [\n    {\n      \"firstName\": \"John\",\n      \"lastName\": \"Doe\",\n      \"age\": 30,\n      \"gender\": \"Male\",\n      \"email\": \"john.doe@example.com\",\n      \"phone\": \"+911234567890\",\n      \"passportNumber\": \"A12345678\",\n      \"nationality\": \"Indian\"\n    }\n  ],\n  \"contactEmail\": \"john.doe@example.com\",\n  \"contactPhone\": \"+911234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"]
            }
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{bookingId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "💳 Payments",
      "item": [
        {
          "name": "Create Payment Intent",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.paymentIntentId) {",
                  "        pm.collectionVariables.set('paymentIntentId', response.data.paymentIntentId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookingId\": \"{{bookingId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings/payment-intent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "payment-intent"]
            }
          }
        },
        {
          "name": "Confirm Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"{{paymentIntentId}}\",\n  \"paymentMethodId\": \"pm_card_visa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings/confirm-payment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "confirm-payment"]
            }
          }
        }
      ]
    },
    {
      "name": "🎫 E-Tickets",
      "item": [
        {
          "name": "Download E-Ticket PDF",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{bookingId}}/eticket",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{bookingId}}", "eticket"]
            }
          }
        }
      ]
    },
    {
      "name": "👤 Users",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "bookings"]
            }
          }
        }
      ]
    }
  ]
}